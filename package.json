{
    "name": "@amarislabs/kiara",
    "version": "1.0.0",
    "type": "module",
    "description": "CLI orchestrator for managing releases, versioning, and changelog generation.",
    "main": "src/cli.ts",
    "module": "src/cli.ts",
    "bin": {
        "kiara": "./src/cli.ts"
    },
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "import": "./src/index.ts"
        }
    },
    "license": "MIT",
    "homepage": "https://github.com/amarislabs/kiara#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/amarislabs/kiara.git"
    },
    "bugs": {
        "url": "https://github.com/amarislabs/kiara/issues"
    },
    "author": "Yehezkiel Dio Sinolungan <yehezkieldio@proton.me>",
    "keywords": ["cli", "release", "versioning", "changelog"],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "lint": "biome check src",
        "format": "biome format . --write"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/bun": "latest",
        "@types/semver": "^7.5.8"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@octokit/auth-token": "^5.1.2",
        "@octokit/core": "^6.1.4",
        "c12": "^2.0.2",
        "commander": "^13.1.0",
        "consola": "^3.4.0",
        "conventional-recommended-bump": "^11.0.0",
        "execa": "^9.5.2",
        "git-cliff": "^2.8.0",
        "neverthrow": "^8.1.1",
        "semver": "^7.7.1",
        "smol-toml": "^1.3.1"
    }
